@model  IEnumerable<WebApplication.Models.FileEntity>

<link href="~/Content/index.css" rel="stylesheet" />

<h2>File Manager</h2>
@{
    var grid = new WebGrid(Model, canPage: true, rowsPerPage: 20,
    selectionFieldName: "selectedRow");
    grid.Pager(WebGridPagerModes.NextPrevious);}

<div id="gridContent">
    @grid.GetHtml(tableStyle: "webGrid",
            headerStyle: "header",
            alternatingRowStyle: "alt",
            selectedRowStyle: "select",
            rowStyle: "webgrid-row-style",
            columns: grid.Columns(
            grid.Column("FileId", "FileId", @<text> <span id="spnCustomerId">@item.FileId</span></text>,
                         canSort: false, style: "customerId"),

            grid.Column("Filename", "Filename", format: @<text>
                    <span id="spnFileName" class="display-mode">@item.FileName</span>
                    <input type="text" id="FileName" value="@item.FileName" class="edit-mode" /></text>,
                       canSort: false),

            grid.Column("Filesize", "Filesize", format: @<text>
                    <span id="spnFileSize" class="display-mode">@item.FileSize</span>
                    <input type="text" id="FileSize" value="@item.FileSize" class="edit-mode" /></text>,
                       canSort: false),

            grid.Column("Action", format: @<text>
                    <img src="~/Content/images/edit.jpg" title="Edit File" id="btnEdit" class="edit-button" />
                    <img src="~/Content/images/delete.jpg" title="Delete File" class="delete-File" />
            </text>, canSort: false, style: "action")
                          ))

</div>
<input type="button" value="New File" class="btnFile" />
<div id="placeHolderFile">
</div>
<script src="~/Scripts/app.js"></script>