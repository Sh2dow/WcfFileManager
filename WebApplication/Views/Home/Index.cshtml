@model  IEnumerable<WebApplication.Models.FSItem>

<link href="~/Content/index.css" rel="stylesheet" />

<h2>File Manager</h2>
@{
    var grid = new WebGrid(Model, canPage: true, rowsPerPage: 25,
    selectionFieldName: "selectedRow");
    grid.Pager(WebGridPagerModes.NextPrevious);}

<div id="gridContent">
        @grid.GetHtml(tableStyle: "webGrid",
                headerStyle: "header",
                alternatingRowStyle: "alt",
                selectedRowStyle: "select",
                rowStyle: "webgrid-row-style",
                columns: grid.Columns(

                grid.Column(columnName: "FileName", format: (item) => Html.ActionLink(((string)item.Filename), "@item.FileName", new { FileName = item.FileName })),

                @*grid.Column("Filename", "Filename", format: @<text>
                        <span id="spnFileName" class="display-mode">@item.FileName</span>
                        <input type="text" id="FileName" value="@item.FileName" class="edit-mode" /></text>,
                           canSort: false),*@

                grid.Column("size", "size", format: @<text>
                        <span id="spnFileSize" class="display-mode">@item.size  </span>
                        <input type="text" id="FileSize" value="@item.size" class="edit-mode" /></text>,
                           canSort: true),

                grid.Column("Action", format: @<text>
                        <img src="~/Content/images/edit.jpg" title="Edit File" id="btnEdit" class="edit-button" />
                        <img src="~/Content/images/delete.jpg" title="Delete File" class="delete-File" />
                </text>, canSort: false, style: "action")
                              ))

    </div>

